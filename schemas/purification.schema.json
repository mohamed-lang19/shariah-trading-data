{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["date", "entries"],
  "properties": {
    "date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ticker", "realized_pnl_eur", "dividends_eur", "haram_pct", "donation_due_eur", "paid"],
        "properties": {
          "ticker": {"type": "string"},
          "realized_pnl_eur": {"type": "number"},
          "dividends_eur": {"type": "number"},
          "haram_pct": {"type": "number"},
          "donation_due_eur": {"type": "number"},
          "paid": {"type": "boolean"},
          "note": {"type": "string"}
        }
      }
    }
  }
}
