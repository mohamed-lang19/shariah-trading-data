{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["date", "universe"],
  "properties": {
    "date": {"type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$"},
    "universe": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["ticker", "country", "price", "adv_shares", "mktcap_eur", "sector"],
        "properties": {
          "ticker": {"type": "string"},
          "country": {"type": "string"},
          "price": {"type": "number"},
          "adv_shares": {"type": "number"},
          "mktcap_eur": {"type": "number"},
          "sector": {"type": "string"},
          "debt_mc": {"type": "number"},
          "cashsec_mc": {"type": "number"},
          "haram_rev_pct": {"type": "number"},
          "catalyst": {"type": "string"},
          "entry": {"type": "number"},
          "stop": {"type": "number"},
          "thesis": {"type": "string"},
          "verdict": {"type": "string", "enum": ["PASS", "FAIL", "UNKNOWN", "BORDERLINE"]}
        }
      }
    }
  }
}
